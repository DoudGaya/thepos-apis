generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}
model User {
  id                       String            @id @default(cuid())
  email                    String            @unique
  phone                    String            @unique
  firstName                String?           // Optional - filled in Phase 5
  lastName                 String?           // Optional - filled in Phase 5
  passwordHash             String?           // Optional - set in Phase 3 (set-password)
  pinHash                  String?
  isVerified               Boolean           @default(false)
  hasFundedWallet          Boolean           @default(false)
  referralCode             String            @unique
  referredBy               String?
  credits                  Float             @default(0)
  role                     Role              @default(USER)
  createdAt                DateTime          @default(now())
  updatedAt                DateTime          @updatedAt
  accounts                 Account[]
  notifications            Notification[]
  referralEarningsReferred ReferralEarning[] @relation("ReferralEarningReferred")
  referralEarnings         ReferralEarning[]
  referredUsers            Referral[]        @relation("ReferredUser")
  referrals                Referral[]        @relation("ReferrerUser")
  sessions                 Session[]
  subscriptions            Subscription[]
  transactions             Transaction[]
  sentTransfers            Transfer[]        @relation("SentTransfers")
  receivedTransfers        Transfer[]        @relation("ReceivedTransfers")
  sentRequests             MoneyRequest[]    @relation("SentRequests")
  receivedRequests         MoneyRequest[]    @relation("ReceivedRequests")
  targetProgress           UserTargetProgress[]
  rewardHistory            RewardHistory[]
  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Transaction {
  id               String            @id @default(cuid())
  userId           String
  type             TransactionType
  amount           Float
  status           TransactionStatus @default(PENDING)
  reference        String            @unique
  details          Json
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  costPrice        Float             @default(0)
  idempotencyKey   String?           @unique
  network          String?
  profit           Float             @default(0)
  recipient        String?
  sellingPrice     Float             @default(0)
  vendorCallAt     DateTime?
  vendorName       String?
  vendorReference  String?
  vendorResponse   Json?
  vendorResponseAt DateTime?
  vendorStatus     String?
  referralEarnings ReferralEarning[]
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("transactions")
}

model Subscription {
  id          String             @id @default(cuid())
  userId      String
  type        SubscriptionType
  amount      Float
  frequency   SubscriptionFreq   @default(MONTHLY)
  status      SubscriptionStatus @default(ACTIVE)
  details     Json
  nextRenewal DateTime
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  user        User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Referral {
  id         String   @id @default(cuid())
  referrerId String
  referredId String
  reward     Float    @default(100)
  status     String   @default("PENDING")
  createdAt  DateTime @default(now())
  referred   User     @relation("ReferredUser", fields: [referredId], references: [id], onDelete: Cascade)
  referrer   User     @relation("ReferrerUser", fields: [referrerId], references: [id], onDelete: Cascade)

  @@unique([referrerId, referredId])
  @@map("referrals")
}

model ReferralEarning {
  id             String       @id @default(cuid())
  userId         String
  referredUserId String?
  transactionId  String?
  amount         Float
  type           String
  status         String       @default("PENDING")
  description    String?
  paidAt         DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  referredUser   User?        @relation("ReferralEarningReferred", fields: [referredUserId], references: [id])
  transaction    Transaction? @relation(fields: [transactionId], references: [id])
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("referral_earnings")
}

model OTP {
  id        String   @id @default(cuid())
  phone     String
  code      String
  type      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@map("otps")
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  title     String
  message   String
  type      NotificationType @default(GENERAL)
  data      Json?
  isRead    Boolean          @default(false)
  readAt    DateTime?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}

model Pricing {
  id           String   @id @default(cuid())
  service      String
  network      String
  profitMargin Float    @default(2.5)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([service, network])
  @@map("pricing")
}

model VendorConfig {
  id               String    @id @default(cuid())
  vendorName       String    @unique
  adapterId        String    @unique // "AMIGO", "VTU_NG", "CLUBKONNECT"
  type             VendorType @default(ALL)
  isEnabled        Boolean   @default(true)
  isPrimary        Boolean   @default(false)
  priority         Int       @default(0)
  balance          Float     @default(0)
  supportsAirtime  Boolean   @default(true)
  supportsData     Boolean   @default(true)
  supportsElectric Boolean   @default(false)
  supportsCableTV  Boolean   @default(false)
  supportsBetting  Boolean   @default(false)
  supportsEPINS    Boolean   @default(false)
  credentials      Json
  lastHealthCheck  DateTime?
  isHealthy        Boolean   @default(true)
  failureCount     Int       @default(0)
  lastFailure      DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Relations
  serviceRoutingsPrimary  ServiceRouting[] @relation("PrimaryVendor")
  serviceRoutingsFallback ServiceRouting[] @relation("FallbackVendor")
  dataPlans               DataPlan[]

  @@map("vendor_configs")
}

model ServiceRouting {
  id               String       @id @default(cuid())
  serviceType      TransactionType
  network          String       // MTN, GLO, AIRTEL, 9MOBILE, ETC
  primaryVendorId  String
  fallbackVendorId String?
  primaryVendor    VendorConfig @relation("PrimaryVendor", fields: [primaryVendorId], references: [id])
  fallbackVendor   VendorConfig? @relation("FallbackVendor", fields: [fallbackVendorId], references: [id])
  isActive         Boolean      @default(true)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt

  @@unique([serviceType, network])
  @@map("service_routings")
}

model DataPlan {
  id            String       @id @default(cuid())
  planId        String       // Vendor's Plan ID
  network       String
  planType      String       // SME, CG, GIFTING, ETC
  size          String
  validity      String
  vendorId      String
  vendor        VendorConfig @relation(fields: [vendorId], references: [id])
  costPrice     Float
  sellingPrice  Float
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@unique([vendorId, planId])
  @@map("data_plans")
}

enum VendorType {
  DATA
  AIRTIME
  UTILITY
  ALL
}

model ProfitMargin {
  id          String   @id @default(cuid())
  service     String
  vendorName  String?
  marginType  String
  marginValue Float
  minAmount   Float?
  maxAmount   Float?
  network     String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([service, vendorName, network])
  @@map("profit_margins")
}

model AmigoPlans {
  id                String   @id @default(cuid())
  planId            Int      @unique // Amigo's actual plan ID (5000, 1001, etc.)
  networkName       String   // 'MTN' or 'GLO'
  dataCapacity      String   // e.g., "500MB", "1GB", "200GB"
  dataCapacityValue Float    // numeric value in GB
  validityDays      Int      // 30 or 60
  validityLabel     String   // e.g., "30 Days", "60 Days"
  amigoBasePrice    Float    // Amigo's official price in ₦
  adminOverridePrice Float? // Admin-set price in ₦ (if null, use amigoBasePrice)
  pricePerGB        Float    // calculated price per GB
  efficiencyRating  Float    @default(100) // percentage (100 = 100%)
  isEnabled         Boolean  @default(true) // can admin disable a plan?
  margin            Float?   // calculated as adminOverridePrice - amigoBasePrice
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([planId, networkName])
  @@index([networkName])
  @@index([isEnabled])
  @@map("amigo_plans")
}

enum Role {
  USER
  ADMIN
}

enum TransactionType {
  DATA
  AIRTIME
  ELECTRICITY
  CABLE
  CABLE_TV
  WATER
  BETTING
  EPINS
  CREDIT_PURCHASE
  REFERRAL_BONUS
  WALLET_FUNDING
  P2P_TRANSFER
}

enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
  COMPLETED
}

enum SubscriptionType {
  DATA
  ELECTRICITY
  CABLE
}

enum SubscriptionFreq {
  MONTHLY
  WEEKLY
}

enum SubscriptionStatus {
  ACTIVE
  PAUSED
  CANCELLED
}

enum NotificationType {
  GENERAL
  TRANSACTION
  PROMOTION
  SYSTEM
  SECURITY
}

model Transfer {
  id          String         @id @default(cuid())
  senderId    String
  receiverId  String
  amount      Float
  status      TransferStatus @default(PENDING)
  note        String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  sender      User           @relation("SentTransfers", fields: [senderId], references: [id])
  receiver    User           @relation("ReceivedTransfers", fields: [receiverId], references: [id])

  @@map("transfers")
}

model MoneyRequest {
  id          String             @id @default(cuid())
  requesterId String
  payerId     String
  amount      Float
  status      MoneyRequestStatus @default(PENDING)
  note        String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  requester   User               @relation("SentRequests", fields: [requesterId], references: [id])
  payer       User               @relation("ReceivedRequests", fields: [payerId], references: [id])

  @@map("money_requests")
}

model SalesTarget {
  id           String       @id @default(cuid())
  title        String
  description  String?
  type         TargetType
  period       TargetPeriod // DAILY, WEEKLY, MONTHLY, CUSTOM
  targetValue  Float
  rewardAmount Float
  
  // Targeting
  audience        TargetAudience @default(ALL)
  specificUserIds Json?          // List of user IDs for SPECIFIC audience
  
  // Enhanced fields
  tierType        TierType     @default(SINGLE) // SINGLE, MULTIPLE
  tiers           Json?        // Array of tier objects
  
  // Time-based campaigns
  startDate       DateTime?
  endDate         DateTime?
  isRecurring     Boolean      @default(true)
  
  // Filtering options
  serviceType     TransactionType?
  network         String?
  
  // Configuration
  isActive        Boolean      @default(true)
  isVisible       Boolean      @default(true) // Hide before startDate
  priority        Int          @default(0)    // Display order
  
  // Analytics
  totalParticipants Int        @default(0)
  totalCompletions  Int        @default(0)
  totalRewardsPaid  Float      @default(0)
  
  // Meta
  createdBy       String?      // Admin user ID
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  progress        UserTargetProgress[]

  @@map("sales_targets")
}

model UserTargetProgress {
  id            String      @id @default(cuid())
  userId        String
  targetId      String
  
  // Progress tracking
  currentValue  Float       @default(0)
  currentTier   Int?        // For multi-tier targets
  
  // Claim status
  isClaimed     Boolean     @default(false)
  claimedAt     DateTime?
  claimedAmount Float       @default(0)
  
  // Time tracking
  periodStart   DateTime
  periodEnd     DateTime
  firstProgressAt DateTime?   // When user first made progress
  lastProgressAt  DateTime?   // Last transaction counted
  
  // Analytics
  transactionCount Int       @default(0)
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  target        SalesTarget @relation(fields: [targetId], references: [id], onDelete: Cascade)

  @@unique([userId, targetId, periodStart])
  @@index([userId, isClaimed])
  @@index([targetId, periodStart])
  @@map("user_target_progress")
}

// New model for detailed reward history
model RewardHistory {
  id            String      @id @default(cuid())
  userId        String
  targetId      String
  progressId    String      @unique
  
  amount        Float
  tier          Int?
  tierName      String?
  
  transactionId String?     // Reference to credited transaction
  
  createdAt     DateTime    @default(now())
  
  user          User        @relation(fields: [userId], references: [id])
  
  @@index([userId, createdAt])
  @@index([targetId, createdAt])
  @@map("reward_history")
}

enum TierType {
  SINGLE
  MULTIPLE
}

enum TargetPeriod {
  DAILY
  WEEKLY
  MONTHLY
  CUSTOM
}

enum TargetAudience {
  ALL
  SPECIFIC
}

enum TransferStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
  COMPLETED
}

enum MoneyRequestStatus {
  PENDING
  PAID
  DECLINED
  CANCELLED
}

enum TargetType {
  AMOUNT_SPENT
  TRANSACTION_COUNT
  DATA_VOLUME
}
